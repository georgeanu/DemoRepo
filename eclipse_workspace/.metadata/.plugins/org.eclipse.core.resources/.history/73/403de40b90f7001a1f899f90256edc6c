
public class PrimeNumber {
	public static void main(String a[]) {

		int input = 4;
		PrimeNumber nr = new PrimeNumber();
		boolean isPrimeNum = nr.isPrime(input);
		System.out.println(+input + " is prime number?: " + isPrimeNum);
	}

	public boolean isPrime(int num) {
		int i = 0;
		for (i = 2; i < num / 2; i++) {
			// System.out.println("value of i" +i);
			if (num % i == 0)
				return false;

		}

		return true;

	}

}
