package Veevaprep;

public class Practice {
	
	public static String reverseString(String str) {
	 
		int len = str.length();
		int i=0, j=len-1;
		char temp;
		char[] ch =str.toCharArray();
		while(i<j) {
			
		 temp=ch[j];
		ch[j]=ch[i];
		 ch[i]=temp;
		 
		i++;
		j--;
			
		}
		str=String.copyValueOf(ch);
		return str;
		
	}
	
	public static int reverseInt(int num) {
		long rev=0;
		
		while(num%10 !=0 || num/10 !=0) {
			
			rev = rev*10 + num%10;
			num = num/10;
			
		}
		
		
		if((rev>Integer.MAX_VALUE) || (rev < Integer.MIN_VALUE)) return 0;
		return (int) rev;
	}
	
	public static int fact(int num) {
		
		int res;
		if(num ==0) return 1;
		
		res= num * fact(num-1);
		
		return res;
	}
	
	public static int fib(int num) {
		
	//	int[] fibna = new int[num];
	//	fibna[0]=0;
	//	fibna[1]=1;
	    if(num < 2 ) return num;
		int series=0;
		
		for(int i=2;i<=num;i++) {
			series = fib(num -2) +fib(num -1); 
			
		}
 		
	/**	for(int i=2;i<num;i++) {
			fibna[i] =  fibna[i=1]+ fibna[i-2];
			
		}*/
		
		
		return series;
		
		
		
	}
	
public static void main(String args[]) {
		
		System.out.println("The string reversed is " +reverseString("applecrisps"));
		System.out.println("The reverese num is " +reverseInt(123));
		System.out.println("The factorial is " +fact(5));
		System.out.println("The fibnocci series is "+fib(5));
		
	}
	

}
